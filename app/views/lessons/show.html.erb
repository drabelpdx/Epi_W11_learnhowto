<h1><%= @lesson.name %></h1>

<p><%= link_to "Return to lessons", lessons_path %></p>

<% unless  @lesson.id == Lesson.first.id %>
<!-- Hide 'Previous' link once we reach to first record -->
  <%= link_to 'Previous', Lesson.get_previous_lesson(@lesson) %>
<% end %>
<% unless @lesson.id == Lesson.last.id %>
<!-- Hide 'Next' link once we reach to last record -->
  <%= link_to 'Next', Lesson.get_next_lesson(@lesson) %>
<% end %>


<h3>Lesson Content:</h3>
<p><%= @lesson.content %></p>

<p><%= link_to "Edit", edit_lesson_path(@lesson) %></p>
<p><%= link_to "Delete", lesson_path(@lesson),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
